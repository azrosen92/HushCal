<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/event_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#C9C9C9"
            android:minHeight="30dp"
            android:text="@string/sample_event"
            android:gravity="center_vertical"
            android:paddingLeft="2pt"
            android:textColor="#FFFFFF" />

        <RadioGroup
            android:id="@+id/status_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/event_text"
            android:gravity="center_horizontal"
            android:minHeight="60dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/event_sound"
                style="@drawable/sound"
                android:layout_height="wrap_content"
                android:button="@drawable/sound"
                android:minWidth="60dp" />

            <RadioButton
                android:id="@+id/event_silence"
                style="@style/AppBaseTheme"
                android:layout_height="wrap_content"
                android:button="@drawable/silent"
                android:minWidth="60dp" />

            <RadioButton
                android:id="@+id/event_vibrate"
                android:layout_height="wrap_content"
                android:button="@drawable/vibrate"
                android:minWidth="60dp" />
        </RadioGroup>
    </RelativeLayout>

</TableRow>