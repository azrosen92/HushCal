<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:minHeight="100dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/event_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C9C9C9"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:paddingBottom="4pt"
        android:paddingLeft="4pt"
        android:paddingTop="4pt"
        android:text="@string/sample_event"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/status_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:minHeight="60dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/event_sound"
            style="@drawable/sound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:button="@drawable/sound"
            android:gravity="center"
            android:minWidth="60dp" />

        <RadioButton
            android:id="@+id/event_silence"
            style="@style/AppBaseTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:button="@drawable/silent"
            android:gravity="center"
            android:minWidth="60dp" />

        <RadioButton
            android:id="@+id/event_vibrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:button="@drawable/vibrate"
            android:gravity="center"
            android:minWidth="60dp" />
    </RadioGroup>

</LinearLayout>